#!/usr/bin/env bash
# bash script to install nginx web server & make the following configurations:

# Update package list
sudo apt-get update

# Install nginx
sudo apt-get install nginx -y

# Configure nginx
sudo sed -i 's|listen 80 default_server;|listen 80 default_server;\n\tlocation / {\n\t\techo "Holberton School";\n\t}|' /etc/nginx/sites-enabled/default

# Restart nginx
sudo killall nginx
sudo nginx
